---
import Button from "../components/Button.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found" description="Sorry, the page you were looking for does not exist.">
    <section class="flex justify-center items-center flex-col h-svh mt-0 gap-2">
        <h1 class="text-primary text-7xl font-bold mb-4">404</h1>
        <p class="text-2xl font-semibold text-center">Oops!</p>
        <p class="text-lg text-white/80 text-center">The page you're looking for doesn't exist.</p>
        <a class="bg-accent text-white text-base px-5 py-3 rounded-xl mt-4" href="/">Go Back Home</a>
    </section>
</Layout>
